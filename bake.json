{
  "$schema": "./schema.json",
  "name": "bake",
  "version": "0.0.1-alpha",
  "description": "A less painful build tool",
  "variables": {
    "src": "./src",
    "out": "./out",
    "cc": "clang++",
    "ccflags": "-Wall -O3",
    "ldflags": "-llibcurl -libglaze",
    "dbg": "echo \"name: ${:name}\nversion: ${:version}\nsrc: '${src}'\nldflags: '${ldflags}'\nnope: '${nope}'\nraw: '\\${raw}' [EOT]\""
  },
  "targets": {
    "debug": {
      "variables": {
        "ccflags": "${ccflags} -O1 -DDEBUG"
      }
    },
    "dbg": {
      "cmd": "${dbg}"
    },
    "clean": {
      "cmd": "rm -rf ${out}/*"
    },
    "install": {
      "cmd": [
        "cp ${out}/*.o /usr/local/lib/",
        "cp ${src}/*.h /usr/local/include/",
        "cp ${out}/bake /usr/local/bin/"
      ]
    },
    "${out}/**/*.o": {
      "in": "${src}/**/*.c",
      "transient": "${src}/**/*.h",
      "cmd": ["echo ${:transient}", "${cc} -c ${ccflags} -o ${:target} ${:in}"]
    },
    "${out}/bake": {
      "default": true,
      "in": ["${out}/*.o"],
      "cmd": "${cc} ${ldflags} -o ${:target} ${:in}"
    }
  }
}
